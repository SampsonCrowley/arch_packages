#!/usr/bin/env bash
VERSION=7.43.2
RELEASE=1
SCRIPT_DIR=$(dirname "$0")
SCRIPT_DIR=$(cd $SCRIPT_DIR; pwd)
SRC_DIR=$(cd "$SCRIPT_DIR/../"; pwd)
SRC_DIR+="/heroku-cli"
TMP_DIR="$SRC_DIR/tmp"

set -e

pushd "$SRC_DIR"

  if [ ! -d ./cli-source ]; then git clone https://github.com/heroku/cli.git cli-source; fi
  rm -rf src/ pkg/
  rm -f ./heroku-cli-*.tar*

  sed -i "s/^pkgver=.*/pkgver=$VERSION/" ./PKGBUILD
  sed -i "s/^pkgrel=.*/pkgrel=$RELEASE/" ./PKGBUILD

  pushd cli-source

    git fetch origin -t "v$VERSION"
    git checkout "v$VERSION"
    yarn

    pushd packages/cli

      sed -i "/oclif\/plugin-update/d" ./package.json
      npm install
      rm -rf ./dist
      npx oclif-dev pack --targets="linux-x64"

      pushd dist/heroku-v$VERSION/

        gsutil -h "Cache-Control:public, max-age=31536000" cp ./heroku-v$VERSION-linux-x64.tar.xz gs://arch-package-files/heroku-cli-v$VERSION-$RELEASE.tar.xz

      popd

    popd

  popd

  updpkgsums

  makepkg
popd
